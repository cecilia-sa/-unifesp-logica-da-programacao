#include <stdio.h>
 
int main() {
 
 float x;
 scanf("%f",&x);
 if (x <= 2000.0)
 printf("Isento\n");
 else if (x <= 3000.0)
 printf("R$ %.2f\n", (x-2000.0)*8/100);
 else if (x <= 4500.0)
 printf("R$ %.2f\n", 1000.0*8/100+(x-3000.0)*18/100);
 else
 printf("R$ %.2f\n", 1000.0*8/100+1500.0*18/100+ (x-4500.0)*28/100);
    return 0;
}
