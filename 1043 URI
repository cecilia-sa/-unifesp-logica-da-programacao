#include <stdio.h>
 
int main() {
 
    double a, b, c, p, area;
 scanf("%lf" ,&a);
 scanf("%lf" ,&b);
 scanf("%lf" ,&c);
 
  if (a<b+c && b<a+c && c<a+b){
  	p = (a+b+c);
  	printf("Perimetro = %.1lf\n" ,p);
  }
  else{
  	area = ((a+b)*c)/2;
  	printf("Area = %.1lf\n" ,area);
  }
 
    return 0;
}
