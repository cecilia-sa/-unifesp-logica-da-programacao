    #include <stdio.h>
 
int main() {
 
    double n1,n2,n3,n4,m,e,mf;
    scanf("%lf %lf %lf %lf",&n1,&n2,&n3,&n4);
    m=(n1*2+n2*3+n3*4+n4)/10;
    printf("Media: %.1lf",m);
    if (m>=7.0)
    {
     printf("Aluno aprovado.\n");
    }
    else
     if (m<5)
     {
      printf("Aluno reprovado.\n");
     }
     else 
      if (m>=5 && m<=6.9)
      {
       printf("Aluno em exame\n");
         scanf("%lf",&e);
          printf("Nota do exame: %.1lf" ,e);
       mf=(m+e)/2;
        if (mf>=5.0)
         {
         printf("Aluno aprovado\nMedia final:  %.1lf\n",mf);
         }
       else
       {
       printf("Aluno reprovado.\nMedia final:  %.1lf\n", mf);
       }
      }
    return 0;
}
