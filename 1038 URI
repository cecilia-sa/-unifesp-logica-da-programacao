#include <stdio.h>
 
int main() {
 
int i,q;
scanf("%d %d",&i,&q);
if (i==1)
 printf("Total: R$ %.2f\n",4.00*q);
else
 if (i==2)
  printf("Total: R$ %.2f\n",4.50*q);
 else
  if (i==3)
   printf("Total: R$ %.2f\n",5.00*q);
  else
   if (i==4)
    printf("Total: R$ %.2f\n",2.00*q);
   else
    if (i==5)
     printf("Total: R$ %.2f\n",1.50*q);

return 0;

}
